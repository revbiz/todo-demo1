  "scripts": {
    "dev": "next dev",
    "dev:vercel": "cross-env DATABASE_URL=\"$POSTGRES_URL\" next dev",
    "build": "prisma generate && prisma db push --accept-data-loss && next build",
    "start": "next start",
    "lint": "next lint",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "db:seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "vercel:pull": "vercel env pull .env",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate:dev && npm run db:seed",
    "db:push": "prisma db push --accept-data-loss",
    "db:push:vercel": "cross-env DATABASE_URL=\"$POSTGRES_URL\" prisma db push --accept-data-loss",
    "db:migrate:vercel": "cross-env DATABASE_URL=\"$POSTGRES_URL\" prisma migrate deploy",
    "db:seed:vercel": "cross-env DATABASE_URL=\"$POSTGRES_URL\" npm run db:seed"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
