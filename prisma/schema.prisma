generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum TodoCategory {
  Event
  Reminder
  Someday
  Now
}

enum Priority {
  High
  Medium
  Low
}

enum Status {
  Active
  Pending
  Complete
  Forget
  OnHold
}

model Todo {
  id          String      @id @default(cuid())
  title       String
  description String?
  url         String?     @db.Text
  category    TodoCategory
  priority    Priority
  status      Status      @default(Active)
  dueDate     DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
